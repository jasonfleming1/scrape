{{#if article}} {{#each article}}
<div class="card mb-3">
  <div class="card-header">
    <h5>{{this.title}}</h5>
  </div>
  <div class="card-body">
    <div class="row">
      <div class="col-12">
        <h6>Article Summary:</h6>
        <p>{{this.summary}}</p>
      </div>
    </div>
    <br>
    <div class="row">
      <a href="{{this.link}}" type="button" class="btn btn-secondary ml-3 mr-2" target="_blank">Read Article</a>
      <button type="button" class="btn btn-success save" data-id={{this._id}}>Save Article</button>
    </div>
  </div>
</div>
{{/each}} {{else}}
<div class="card">
  <div class="card-body">
    <h4>Looks like we don't have any new articles. Please press Scrape.</h4>
  </div>
</div>
{{/if}}